{% extends 'base.html.twig' %}

{% block title %}Figure{% endblock %}

{% block body %}
    <h1>Figure</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ figure.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ figure.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ figure.description }}</td>
            </tr>
            <tr>
                <th>Family</th>
                <td>{{ figure.family }}</td>
            </tr>
            <tr>
                <th>Pictures</th>
                <td>{{ figure.pictures ? figure.pictures|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Videos</th>
                <td>{{ figure.videos ? figure.videos|join(', ') : '' }}</td>
            </tr>
            <tr>
                <th>Slug</th>
                <td>{{ figure.slug }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('figure_index') }}">back to list</a>

    <a href="{{ path('figure_edit', {'id': figure.id}) }}">edit</a>

    {{ include('figure/_delete_form.html.twig') }}
{% endblock %}
